<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleItemView">
        <attr name="icon" format="reference" />
        <attr name="label" format="string" />
        <attr name="value" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension"/>
        <attr name="textColorValue" format="color" />
        <attr name="textSizeValue" format="dimension"/>
        <attr name="textColorLabel" format="color" />
        <attr name="textSizeLabel" format="dimension"/>
        <attr name="backgroundColor"  format="color"/>
        <attr name="appearance" format="enum">
            <enum name="inLine" value="0"/>
            <enum name="inPiled" value="1"/>
        </attr>

    </declare-styleable>
</resources>